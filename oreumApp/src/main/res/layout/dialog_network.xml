<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/network_error_text_padding_horizontal"
        android:paddingVertical="@dimen/network_error_text_padding_vertical"
        android:text="@string/network_error"
        android:textSize="@dimen/network_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/network_border"
        android:background="@color/green_middle_false" />

    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/network_retry_text_padding_vertical"
        android:text="@string/network_retry"
        android:textColor="@color/green_middle"
        android:textSize="@dimen/network_text_size"
        android:textStyle="bold" />

</LinearLayout>