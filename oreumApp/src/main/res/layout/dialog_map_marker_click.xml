<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_marker_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/dialog_marker_oreum_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dialog_marker_text_margin_horizontal"
        android:layout_marginTop="@dimen/dialog_marker_text_margin_top"
        android:fontFamily="@font/jeju_myeongjo"
        android:text="@string/test_word"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_marker_name_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_marker_oreum_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dialog_marker_text_margin_top"
        android:fontFamily="@font/jeju_myeongjo"
        android:text="@string/test_word"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_marker_addr_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialog_marker_oreum_name"
        app:layout_constraintTop_toBottomOf="@+id/dialog_marker_oreum_name" />

    <LinearLayout
        android:id="@+id/favorite_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/rv_item_icon_size"
        android:layout_marginEnd="@dimen/rv_item_icon_margin"
        android:layout_marginBottom="@dimen/rv_item_icon_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stamp_layout">

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="@dimen/rv_item_icon_size"
            android:layout_height="match_parent"
            android:src="@drawable/ic_favorite"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/favorite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jeju_myeongjo"
            android:text="@string/test_number"
            android:textColor="@color/black"
            android:textSize="@dimen/rv_item_icon_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stamp_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/rv_item_icon_size"
        android:layout_margin="@dimen/rv_item_icon_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/stamp_icon"
            android:layout_width="@dimen/rv_item_icon_size"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/rv_item_icon_interval"
            android:src="@drawable/ic_stamp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/stamp_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/jeju_myeongjo"
            android:text="@string/test_number"
            android:textColor="@color/black"
            android:textSize="@dimen/rv_item_icon_text_size" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>